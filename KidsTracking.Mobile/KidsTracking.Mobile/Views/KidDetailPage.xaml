<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KidsTracking.Mobile.Views.KidDetailPage"
             Title="{Binding Title}">

    <Grid x:Name="grid">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Name:" FontSize="Medium" />
        <Label Text="{Binding Item.Name}" FontSize="Small"/>
        <Label Text="Age:" FontSize="Medium" />
        <Label Text="{Binding Item.Age}" FontSize="Small"/>
        <Label Text="Phone:" FontSize="Medium"/>
        <Label Text="{Binding Item.Phone}" FontSize="Medium/"/>
            <Button Text="Call" Clicked="Button_Clicked"/>
            <Button Text="Take a photo"/>
        </StackLayout>
    </Grid>
</ContentPage>