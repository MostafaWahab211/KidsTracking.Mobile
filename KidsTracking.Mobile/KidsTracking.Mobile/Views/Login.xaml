<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KidsTracking.Mobile.Views.Login"
             x:Name="page">
    <ContentPage.Content>
        <StackLayout Padding="10">
            
<Label Text="Email Address" />
<Entry Placeholder="" x:Name="Email"  />
            
<Label Text="Password" />
<Entry Placeholder="" IsPassword="True" x:Name="Password"/>
            <Button Text="Login" HorizontalOptions="Center" Clicked="Button_ClickedAsync"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Label Text="If You Don't Have Account ?"/>
                <Button Text="Create Account" HorizontalOptions="Center"  BackgroundColor="WhiteSmoke" Clicked="Button_Clicked" />
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>